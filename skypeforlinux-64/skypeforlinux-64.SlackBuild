VERSION=$(ls skypeforlinux_*.deb | cut -d _ -f 2)

# unpack .deb archive
ar x skypeforlinux_*.deb
mkdir data
cd data
tar xvf ../data.tar.xz

# make package
mkdir install
rm opt/ -R
cp ../slack-desc install/
makepkg -c y ../skypeforlinux-64-${VERSION}-x86_64-1.txz

# clean
cd ..
rm -r data control.tar.gz data.tar.xz debian-binary _gpgbuilder
